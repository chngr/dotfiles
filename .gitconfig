[user]
	name = Raymond Cheng
	email = chengraymond@live.com
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[alias]
  br = branch -v
  bra = branch -va
  chp = cherry-pick
  ca = commit --amend
  ci = commit
  co = checkout
  df = diff
  dfc = diff --cached
  dfn = diff --name-status
  gr = grep --color -n
  l = log --graph --pretty=format:'%C(bold red)%h%Creset -%C(bold yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  la = log --all --graph --pretty=format:'%C(bold red)%h%Creset -%C(bold yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  lg = log --graph --pretty=format:'%C(bold red)%h%Creset -%C(bold yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset'
  lt = log --graph --oneline --decorate
  lta = log --all --graph --oneline --decorate
  rb = rebase
  rbi = rebase -i
  sh = show
  shn = show --name-status
  st = status
  subup = submodule update --init --recursive
  land = !git-land
  assume = update-index --assume-unchanged
  unassume = update-index --no-assume-unchanged
  assumed = !git ls-files -v | grep ^h | cut -c 3-
[core]
	editor = vim
  excludesfile = ~/.gitignore
[merge]
  conflictstyle = diff3
[credential]
	helper = keychain
